{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Trade",
  "type": "object",
  "required": [
    "symbol",
    "calculated_quantity",
    "risk_pct",
    "direction",
    "time_in_force",
    "order_type",
    "entry_rules",
    "initial_stop_rule"
  ],
  "properties": {
    "symbol": { "type": "string", "minLength": 1 },
    "calculated_quantity": { "type": "number", "minimum": 0 },
    "risk_pct": { "type": "number", "minimum": 0 },
    "direction": { "type": "string", "enum": ["Long", "Short"] },
    "time_in_force": { "type": "string", "enum": ["Day", "GTC"] },
    "order_type": { "type": "string", "enum": ["Market", "Limit"] },
    
    "entry_rules": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "properties": {
          "primary_source": {
            "type": "string",
            "enum": ["Price", "EMA 8", "SMA 8", "EMA 21", "SMA 21", "ADR", "ATR", "Custom"]
          },
          "condition": {
            "type": "string",
            "enum": [">=", "<=", "=", "<", ">"]
          },
          "secondary_source": {
            "type": "string",
            "enum": ["Custom", "EMA 8", "SMA 8", "EMA 21", "SMA 21", "ADR", "ATR"]
          },
          "value": {
            "type": ["string", "number", "null"]
          },
          "extra_params": {
            "type": "object",
            "additionalProperties": true
          }
        },
        "required": ["primary_source", "condition", "secondary_source", "value"],
        "additionalProperties": false
      }
    },

    "initial_stop_rule": {
      "type": "object",
      "properties": {
        "primary_source": {
          "type": "string",
          "enum": ["Price", "EMA 8", "SMA 8", "EMA 21", "SMA 21", "ADR", "ATR", "Custom"]
        },
        "condition": {
          "type": "string",
          "enum": [">=", "<=", "=", "<", ">"]
        },
        "secondary_source": {
          "type": "string",
          "enum": ["Custom", "EMA 8", "SMA 8", "EMA 21", "SMA 21", "ADR", "ATR"]
        },
        "value": {
          "type": ["string", "number", "null"]
        },
        "extra_params": {
          "type": "object",
          "additionalProperties": true
        }
      },
      "required": ["primary_source", "condition", "secondary_source", "value"],
      "additionalProperties": false
    },

    "trailing_stop_rules": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "primary_source": {
            "type": "string",
            "enum": ["Price", "EMA 8", "SMA 8", "EMA 21", "SMA 21", "ADR", "ATR", "Custom"]
          },
          "condition": {
            "type": "string",
            "enum": [">=", "<=", "=", "<", ">"]
          },
          "secondary_source": {
            "type": "string",
            "enum": ["Custom", "EMA 8", "SMA 8", "EMA 21", "SMA 21", "ADR", "ATR"]
          },
          "value": {
            "type": ["string", "number", "null"]
          },
          "extra_params": {
            "type": "object",
            "additionalProperties": true
          }
        },
        "additionalProperties": false
      }
    },

    "take_profit_rules": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "primary_source": {
            "type": "string",
            "enum": ["Price", "EMA 8", "SMA 8", "EMA 21", "SMA 21", "ADR", "ATR", "Custom"]
          },
          "condition": {
            "type": "string",
            "enum": [">=", "<=", "=", "<", ">"]
          },
          "secondary_source": {
            "type": "string",
            "enum": ["Custom", "EMA 8", "SMA 8", "EMA 21", "SMA 21", "ADR", "ATR"]
          },
          "value": {
            "type": ["string", "number", "null"]
          },
          "extra_params": {
            "type": "object",
            "additionalProperties": true
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
